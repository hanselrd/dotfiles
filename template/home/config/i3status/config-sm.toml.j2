icons = "awesome"

[theme]
name = "modern"
[theme.overrides]
idle_bg = "{{ dotfiles_i3status_idle_bg }}"
idle_fg = "{{ dotfiles_i3status_idle_fg }}"
info_bg = "{{ dotfiles_i3status_info_bg }}"
info_fg = "{{ dotfiles_i3status_info_fg }}"
good_bg = "{{ dotfiles_i3status_good_bg }}"
good_fg = "{{ dotfiles_i3status_good_fg }}"
warning_bg = "{{ dotfiles_i3status_warning_bg }}"
warning_fg = "{{ dotfiles_i3status_warning_fg }}"
critical_bg = "{{ dotfiles_i3status_critical_bg }}"
critical_fg = "{{ dotfiles_i3status_critical_fg }}"
separator = "\ue0b2"
# seperator_bg = "auto"
# separator_fg = "auto"
alternating_tint_bg = "{{ dotfiles_i3status_alternating_tint_bg }}"
alternating_tint_fg = "{{ dotfiles_i3status_alternating_tint_fg }}"

[[block]]
block = "disk_space"
path = "/"
alias = "/"
info_type = "available"
unit = "GB"
interval = 20

[[block]]
block = "net"
device = "wlp2s0"
ssid = false
signal_strength = true
ip = false
speed_up = false
speed_down = false
graph_up = false
speed_down = false
interval = 5

[[block]]
block = "net"
device = "tun0"
speed_up = false
speed_down = false
graph_up = false
speed_down = false
# hide_missing = true
# hide_inactive = true
interval = 5

{% if dotfiles_configuration == "laptop" %}
[[block]]
block = "battery"
interval = 10
format = "{percentage}% {time}"
{% endif %}

[[block]]
block = "cpu"
interval = 1
format = "{barchart} {utilization}% {frequency}GHz"

[[block]]
block = "temperature"
collapsed = false
interval = 10
format = "{max}Â°C"
chip = "*-isa-*"

[[block]]
block = "load"
format = "{1m}"
interval = 1

[[block]]
block = "memory"
format_mem = "{Mug}GB/{MTg}GB {Mupi}%"
format_swap = "{SUg}GB/{STg}GB {SUpi}%"
display_type = "memory"
icons = true
clickable = true
interval = 5

{% if dotfiles_configuration == "laptop" %}
[[block]]
block = "backlight"
{% endif %}

[[block]]
block = "sound"
step_width = 5
show_volume_when_muted = true

[[block]]
block = "uptime"

[[block]]
block = "time"
format = "%a %m/%d/%Y %r"
timezone = "US/Eastern"
interval = 5
