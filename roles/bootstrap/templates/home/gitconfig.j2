[user]
	email = {{ bootstrap_git_user_email }}
	name = {{ bootstrap_git_user_name }}
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	editor = $(which vim)
[merge]
	conflictStyle = diff3
