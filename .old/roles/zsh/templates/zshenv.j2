export EDITOR=vim
export LESS=-R
export PAGER=less
{% if inventory_hostname != "remote" %}
{% if ansible_pkg_mgr == "pacman" %}
export BROWSER=brave
{% else %}
export BROWSER=chromium
{% endif %}
{% if tag_alacritty == true %}
export TERMINAL=alacritty
{% elif tag_urxvt == true %}
export TERMINAL=urxvt
{% endif %}
export VISUAL="$EDITOR"
{% endif %}

export GIT_ASKPASS=
export KEYTIMEOUT=1
export SSH_ASKPASS=

{% if inventory_hostname != "remote" %}
export SXHKD_SHELL=/bin/sh
{% endif %}
